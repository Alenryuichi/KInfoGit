{
  "name": "yuque-sync",
  "version": "1.0.0",
  "description": "语雀文档定时同步工具 - 基于 Elog 的 CLI 包装器，支持 AI Agent 集成",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "yuque-sync": "./bin/yuque-sync"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "yuque",
    "语雀",
    "sync",
    "markdown",
    "elog",
    "cli"
  ],
  "author": "Ryuichialen",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "@elog/cli": "^0.14.7",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^17.2.4",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
